<div class="card">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>
  <!-- Card body -->
  <div class="card-body">
      <%= render 'relationships/follow_button', user: @user %>
      <div class="mb-3">
          <%= @user.name %>
        </div>
        <div class="mb-3">
          <%= @user.hobby %>
        </div>
        <div class="mb-3">
          <%= @user.profile %>
        </div>
  </div>
</div>